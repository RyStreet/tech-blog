<div id="aboutUser">
    <h1>{{username}}</h1>
    <h2>{{email}}</h2>
</div>

<form id="newPostForm">

    <div id="newPostTitle">
        <label for="title">Title</label>
        <input type="text" id="title" name="newPostTitle"/>
    </div>

    <div id="newPostText">
        <label for="text">Write your post</label>
        <input type="text" id="text" name="newPostText"/>
    </div>

    <button id="newPostBtn" type="submit" class="btn btn-primary">Create Post</button>

</form>


<div id="userPosts">
    
    <h2>Your Blogs</h2>
    <ul>
        {{#each blogs as |blog|}}
        <li>
            {{>blog-info blog}}
        </li>
        {{/each}}
    </ul>
</div>


<script src="/js/createPost.js"></script>